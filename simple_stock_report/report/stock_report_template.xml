<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_product_stock_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Simple Stock Report</h2>
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Available Quantity</th>
                                    <th>Cost Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="product">
                                    <tr>
                                        <td>
                                            <span t-field="product.name"/>
                                        </td>
                                        <td>
                                            <span t-field="product.qty_available"/>
                                        </td>
                                        <td>
                                            <span t-field="product.standard_price"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>

        <report
            id="report_product_stock_id_1"
            string="Simple Stock Report"
            model="product.template"
            report_type="qweb-pdf"
            name="simple_stock_report.report_product_stock_template"
            file="simple_stock_report.report_product_stock_template"
        />

        <record id="action_product_stock_report_server" model="ir.actions.server">
            <field name="name">Simple Stock Report</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">
                action = env.ref('simple_stock_report.report_product_stock_id_1').report_action([])
            </field>
        </record>
    </data>
</odoo>