<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_inherit_manufacturer" model="ir.ui.view">
        <field name="name">product.template.form.inherit.manufacturer</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[.//field[@name='name']]" position="inside">
                <field name="manufacturer_name" placeholder="Manufacturer Name"/>
            </xpath>
        </field>
    </record>
</odoo>
