<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- ===== Root Application Menu ===== -->
    <menuitem id="dashboard_root_menu"
              name="Dashboards"
              sequence="10"/>   <!-- No parent means it's a root app -->

    <!-- ================= CRM Dashboard ================= -->
    <record id="crm_dashboard_action" model="ir.actions.client">
        <field name="name">CRM Dashboard</field>
        <field name="tag">crm_dashboard_tag</field>
    </record>

    <menuitem id="crm_dashboard_menu"
              name="CRM Dashboard"
              parent="dashboard_root_menu"
              sequence="1"
              action="crm_dashboard_action"/>

    <!-- ================= Sales Dashboard ================= -->
    <record id="sales_dashboard_action" model="ir.actions.client">
        <field name="name">Sales Dashboard</field>
        <field name="tag">sales_dashboard_tag</field>
    </record>

    <menuitem id="sales_dashboard_menu"
              name="Sales Dashboard"
              parent="dashboard_root_menu"
              sequence="2"
              action="sales_dashboard_action"/>
</odoo>

