
<odoo>
  <template id="report_saleorder_inherit_discount_note" inherit_id="sale.report_saleorder_document">
    <xpath expr="//div[@class='page']" position="inside">
      <t t-if="doc.discount_note">
        <div class="row" style="margin-top: 20px;">
          <div class="col-auto">
            <strong>Discount Note:</strong>
            <p t-esc="doc.discount_note"/>
          </div>
        </div>
      </t>
    </xpath>
  </template>
</odoo>
