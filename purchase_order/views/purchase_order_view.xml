<odoo>
    <data>
        <!-- Inherit the purchase order form view -->
        <record id="view_purchase_order_form_inherit_urgent" model="ir.ui.view">
            <field name="name">purchase.order.form.urgent</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="is_urgent" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_tree_inherit_urgent" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit.urgent</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="is_urgent" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit the purchase order tree view -->
        <record id="purchase_order_tree_inherit_urgent2" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit.urgent2</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-danger">is_urgent == True</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>