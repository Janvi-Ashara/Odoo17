<odoo>
    <record id="product_template_form_expiry" model="ir.ui.view">
        <field name="name">product.template.form.expiry</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="expiry_date"/>
                <div>
                    <field name="expiry_warning" invisible="1"/>
                </div>
                <field name="expiry_message"
                       nolabel="1"
                       readonly="1"
                       class="alert alert-danger"
                       modifiers='{"invisible": [["expiry_warning","=",false]]}'/>
            </xpath>
        </field>
    </record>


    <record id="view_product_template_tree_expiry" model="ir.ui.view">
        <field name="name">view.product.template.tree.expiry</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="expiry_date"/>
            </xpath>
        </field>
    </record>


    <record id="view_product_template_tree_expiry2" model="ir.ui.view">
        <field name="name">view.product.template.tree.expiry2</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <!-- Highlight expired or expiring within 30 days -->
                <attribute name="decoration-danger">
                    expiry_date and expiry_date &lt;= (context_today() + relativedelta(days=30)).strftime('%Y-%m-%d')
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
